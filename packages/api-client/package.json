{
  "name": "@drimain/api-client",
  "version": "0.1.0",
  "description": "Type-safe API client for Drimain backend services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist generated",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "generate:api": "npx openapi-typescript-codegen --input openapi/openapi.yaml --output generated --client fetch",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@drimain/core-domain": "workspace:*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
