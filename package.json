{
  "name": "drimain-api",
  "version": "1.0.0",
  "description": "DriMain API with TypeScript client generation",
  "private": true,
  "scripts": {
    "gen:api": "npx openapi-typescript-codegen --input ./docs/openapi.yaml --output ./packages/api-client --client axios",
    "lint:api": "npx swagger-cli validate ./docs/openapi.yaml",
    "build:api": "npm run lint:api && npm run gen:api"
  },
  "devDependencies": {
    "openapi-typescript-codegen": "^0.25.0",
    "swagger-cli": "^4.0.4"
  },
  "directories": {
    "packages": "packages"
  }
}