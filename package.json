{
  "name": "@drimain/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Drimain monorepo with web and mobile applications",
  "scripts": {
    "dev:web": "pnpm --filter @drimain/web dev",
    "build:web": "pnpm --filter @drimain/web build",
    "lint:web": "pnpm --filter @drimain/web lint",
    "test:web": "pnpm --filter @drimain/web test",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}